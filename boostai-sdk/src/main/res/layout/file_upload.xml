<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="10dp"
    android:layout_marginBottom="10dp"
    android:background="@drawable/file_upload_rounded_corners"
    android:gravity="center">

    <ImageView
        android:id="@+id/file_upload_file_image_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_file"/>

    <TextView
        android:id="@+id/file_upload_text_view"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:layout_weight="1"
        android:textColor="@color/textColor"
        android:maxLines="1"
        android:ellipsize="end"
        android:text=""
        android:textSize="17sp"/>

    <com.google.android.material.progressindicator.CircularProgressIndicator
        android:id="@+id/file_upload_progress_indicator"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:layout_marginStart="15dp"
        android:indeterminate="true"
        app:indicatorColor="@color/textColor"
        app:indicatorSize="20dp"
        app:trackThickness="2dp" />

    <ImageView
        android:id="@+id/file_upload_error"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:src="@drawable/ic_error_circle"
        android:layout_marginStart="10dp" />

    <ImageView
        android:id="@+id/file_upload_checkmark"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:src="@drawable/ic_checkmark"
        android:layout_marginStart="10dp" />

    <ImageButton
        android:id="@+id/file_upload_remove_button"
        android:scaleType="centerInside"
        android:adjustViewBounds="true"
        android:layout_width="44dp"
        android:layout_height="48dp"
        android:paddingVertical="16dp"
        android:paddingStart="10dp"
        android:paddingEnd="14dp"
        android:background="@android:color/transparent"
        android:src="@drawable/ic_remove" />
</LinearLayout>