<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_marginStart="10dp"
    android:orientation="vertical"
    android:layout_width="@dimen/chat_view_part_min_width"
    android:layout_height="wrap_content">

    <FrameLayout
        android:id="@+id/chat_message_part"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <LinearLayout
        android:id="@+id/chat_message_buttons"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical" />

    <LinearLayout
        android:id="@+id/chat_message_feedback"
        android:layoutDirection="rtl"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <ImageButton
            android:background="@drawable/ic_thumbs_down"
            android:id="@+id/chat_message_feedback_negative"
            android:contentDescription="@string/not_satistifed_with_answer"
            android:layout_marginTop="6dp"
            android:layout_width="16dp"
            android:layout_height="16dp" />

        <ImageButton
            android:background="@drawable/ic_thumbs_up"
            android:id="@+id/chat_message_feedback_positive"
            android:contentDescription="@string/satistifed_with_answer"
            android:layout_marginStart="8dp"
            android:layout_marginTop="2dp"
            android:layout_width="16dp"
            android:layout_height="16dp" />

    </LinearLayout>

</LinearLayout>