<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:background="@drawable/semi_rounded"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:minWidth="@dimen/chat_view_part_min_width"
    android:layout_marginBottom="10dp"
    android:paddingHorizontal="15dp"
    android:paddingVertical="12dp"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/generic_json_imageview"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:contentDescription="@string/image"
        android:layout_marginBottom="10dp"/>

    <TextView
        android:id="@+id/generic_json_heading_textview"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="17sp"
        android:textColor="@color/purple"
        android:layout_marginBottom="10dp"/>

    <TextView
        android:id="@+id/generic_json_text_textview"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="17sp"
        android:layout_marginBottom="10dp"/>

    <TextView
        android:id="@+id/generic_json_link_textview"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="17sp"
        android:layout_marginBottom="10dp"/>

</LinearLayout>